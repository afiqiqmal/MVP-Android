<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/md_orange_400</item>
        <item name="colorAccent">@color/md_orange_400</item>
        <item name="colorControlNormal">@color/md_white_1000</item>
        <item name="android:statusBarColor">@color/md_orange_400</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AlertDialogCustom" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="android:colorPrimary">@color/md_orange_400</item>
        <item name="android:colorAccent">@color/md_orange_400</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@color/md_orange_400</item>
        <item name="buttonBarPositiveButtonStyle">@color/md_orange_400</item>
    </style>

    <style name="FontBold">
        <item name="fontPath">@string/font_bold</item>
    </style>

    <style name="FontBold.Button" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="fontPath">@string/font_bold</item>
        <item name="android:background">?android:attr/borderlessButtonStyle</item>
    </style>

    <style name="FontRegular">
        <item name="fontPath">@string/font_regular</item>
    </style>

    <style name="FontMedium">
        <item name="fontPath">@string/font_medium</item>
    </style>

    <style name="FontThin">
        <item name="fontPath">@string/font_thin</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_down</item>
        <item name="android:windowExitAnimation">@anim/slide_up</item>
    </style>

    <style name="DialogAnimationFromDown">
        <item name="android:windowEnterAnimation">@anim/slide_in_up</item>
        <item name="android:windowExitAnimation">@anim/slide_out_up</item>
    </style>

</resources>
